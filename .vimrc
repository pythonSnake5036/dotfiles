set nocompatible
set nowrap
set encoding=utf8

filetype on
filetype plugin on
filetype indent on

syntax on

set number

set mouse=a

set backspace=indent,eol,start

set whichwrap+=<,>,[,]

set tabstop=4
set shiftwidth=4
set smarttab
set expandtab

set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx
